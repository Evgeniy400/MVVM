<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVVM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#fff176</item>
        <item name="colorPrimaryVariant">#cabf45</item>
        <item name="colorOnPrimary">#fffff0</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#fa9abd</item>
        <item name="colorSecondaryVariant">#c56a8d</item>
        <item name="colorOnSecondary">#ffccef</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">#c56a8d</item>
        <item name="android:textColorHint">#c56a8d</item>
        <item name="android:windowBackground">#fffff0</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">#c56a8d</item>
        <item name="android:textColorHint">#c56a8d</item>
    </style>

    <style name="TextStyle.Big">
        <item name="android:textSize">26sp</item>

    </style>

    <style name="TextStyle.Normal">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyle.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ShowNoteStyle">
        <item name="android:background">#fffff0</item>
    </style>

    <style name="AddNoteStyle">
        <item name="android:background">#fffff0</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#cabf45</item>
        <item name="android:textColorPrimary">#c56a8d</item>
        <item name="android:background">#fffff0</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#fa9abd</item>
    </style>


</resources>